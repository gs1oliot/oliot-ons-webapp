extends layout

block mainContent
	h2 You have to login to be able to administrate your zones.
	
	a(href='/', class='button small pink') &laquo  Back to index
		
	form(method='post')
		p
			label 
				span.login Username: 
				input.login(name='username')
		p 
			label 
				span.login Password: 
				input.login(type="password", name='password')
		p 
			label 
				span.login Auth Username: 
				input.login(name='authusername')
		p 
			label 
				span.login Auth Password: 
				input.login(type="password", name='authpassword')
		div.formFooter  
			input(type="submit", name='signup', value="Sign Up")
