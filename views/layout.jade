html(lang="en")
	head
		link(rel="stylesheet", href="/css/", type="text/css", media="screen")

		- if (typeof(title) != 'undefined')
			title= title
		- else
			title Atomia DNS
	body
		div.wrapper
			div.header
				div.logo
				- if (user != null && user != 'undefined')
					p.userInfo Logged in as: 
						span.userName #{user.email}
						\ | 
						a(href='/logout') log out 
				div.clear
					
			div.content
				block mainContent
			div.footer
				
